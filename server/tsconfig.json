{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["ES2022"],
    "outDir": "../dist/server",
    "downlevelIteration": true,
    "types": ["node"],
    "typeRoots": ["./types"],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "noUnusedLocals": true
  },
